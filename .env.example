# Copie este arquivo para .env e configure as variáveis

# Configurações do Servidor
PORT=3001
NODE_ENV=development

# Configurações de CORS (produção)
CORS_ORIGIN=https://seudominio.com,https://www.seudominio.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de Segurança
SESSION_SECRET=seu_secret_muito_seguro_aqui_troque_em_producao

# Base de Conhecimento
KNOWLEDGE_BASE_PATH=./knowledgeBase.json
MIN_SIMILARITY_THRESHOLD=0.3

# Configurações de Log
LOG_LEVEL=info

